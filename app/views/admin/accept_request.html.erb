<div class="container">
  <div>
    <h5>Product:</h5>
    <p>
      <%= @request.product.name %>
    </p>
    <h5>Description:</h5>
    <p>
      <%= @request.description %>
    </p>
  </div>

  <%= form_with model: @request do |form| %>
    <div class="form-outline mb-2">
      <%= form.label :price, class: "form-label" %>
      <%= form.number_field :price, autofocus: true, class: "form-control" %>
    </div>
    <%= form.submit "Accept request", class: "btn btn-success mt-2" %>
  <% end %>
</div>